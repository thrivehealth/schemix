{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "lib": ["ES2020"],
    "moduleResolution": "node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": "lib",
    "paths": {
      "*": ["./*"]
    },
    "types": ["@types/node"],
    "typeRoots": ["lib/typings", "./node_modules/@types"]
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "tests"]
}
